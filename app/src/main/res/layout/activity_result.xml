<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screen_light"
    tools:context=".Result">

    <ImageButton
        android:id="@+id/img_btn_back"
        android:layout_width="18dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/img_btn_back" />

    <TextView
        android:id="@+id/tv_hasil"
        style="@style/tv_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Hasil : "
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_bg_hasil"
        style="@style/img_bg_hasil"
        android:layout_width="363dp"
        android:layout_height="447dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839" />

    <TextView
        android:id="@+id/tv_hasil_rincian"
        style="@style/tv_hasil_rincian"
        android:layout_width="245dp"
        android:layout_height="175dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Jika nilai indeks massa tubuh Anda 18.5 sampai 24.9, artinya Anda memiliki berat badan normal.  "
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg_hasil"
        app:layout_constraintEnd_toEndOf="@+id/img_bg_hasil"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="@+id/img_bg_hasil" />

    <TextView
        android:id="@+id/tv_score_bmi"
        style="@style/tv_bmi_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="19.5"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/img_bg_hasil"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/img_bg_hasil"
        app:layout_constraintTop_toBottomOf="@+id/tv_hasil_besar" />

    <TextView
        android:id="@+id/tv_hasil_besar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="NORMAL"
        android:textColor="#09FF7A"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_bg_hasil"
        app:layout_constraintStart_toStartOf="@+id/img_bg_hasil"
        app:layout_constraintTop_toTopOf="@+id/img_bg_hasil" />

</androidx.constraintlayout.widget.ConstraintLayout>