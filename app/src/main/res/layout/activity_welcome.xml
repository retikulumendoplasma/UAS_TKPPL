<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screen_light"
    tools:context=".Welcome">

    <TextView
        android:id="@+id/tv_JenisKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Pilih Jenis Kelamin"
        style="@style/tv_pilih_jenis_kelamin"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_usia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="392dp"
        android:text="Usia"
        style="@style/tv_usia"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/img_btn_laki"
        android:layout_width="136dp"
        android:layout_height="159dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_JenisKelamin"
        style="@style/img_btn_lk"/>

    <ImageButton
        android:id="@+id/img_btn_wanita"
        android:layout_width="136dp"
        android:layout_height="159dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/img_btn_laki"
        app:layout_constraintTop_toBottomOf="@+id/tv_JenisKelamin"
        style="@style/img_btn_wt" />

    <ImageButton
        android:id="@+id/img_btn_next"
        android:layout_width="346dp"
        android:layout_height="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_shape"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_next" />

    <ImageView
        android:id="@+id/img_bg_usia"
        android:layout_width="307dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_usia"
        style="@style/img_bg_usia"/>

    <EditText
        android:id="@+id/et_usia"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:ems="2"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg_usia"
        app:layout_constraintEnd_toEndOf="@+id/img_bg_usia"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/img_bg_usia"
        app:layout_constraintTop_toTopOf="@+id/img_bg_usia"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/img_btn_min"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg_usia"
        app:layout_constraintStart_toStartOf="@+id/img_bg_usia"
        app:layout_constraintTop_toTopOf="@+id/img_bg_usia"
        style="@style/btn_min" />

    <ImageButton
        android:id="@+id/img_btn_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg_usia"
        app:layout_constraintEnd_toEndOf="@+id/img_bg_usia"
        app:layout_constraintTop_toTopOf="@+id/img_bg_usia"
        style="@style/btn_plus" />

</androidx.constraintlayout.widget.ConstraintLayout>